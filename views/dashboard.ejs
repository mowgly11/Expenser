<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expenser - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="./common.css">
</head>

<body>
    <div class="blur-overlay">
        <div class="loader"></div>
    </div>
    <form action="/logout" method="post">
        <button class="btn btn-danger">Logout</button>
    </form>
    <div class="alert-popup card" style="z-index: 99;">
        <div class="card-header border-0">
            <b class="text-white alert-popup-title"></b>
        </div>
        <div class="card-body">
            <p class="alert-popup-m card-text text-white"></p>
        </div>
    </div>
    <section class="container row">
        <div class="col-6">
            <form action="/add_expense" class="w-50" id="expenseForm">
                <div class="form-group mb-3">
                    <label for="item" class="form-label">Item</label>
                    <input type="text" required class="form-control"
                        placeholder="type the item that you spent money on.." name="item" id="item">
                </div>
                <div class="form-group mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" required class="form-control" name="price" id="price">
                </div>
                <div class="form-group mb-3">
                    <label for="amount" class="form-label">Amount</label>
                    <input type="number" required class="form-control" name="amount" id="amount">
                </div>
                <div class="form-group mb-3">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" class="form-control"
                        placeholder="type the date that you purchased this item dd/mm/yyyy" name="date" id="date">
                </div>
                <div class="form-group mb-3">
                    <label for="item" class="form-label">Category</label>
                    <select required class="form-control" name="category" id="category">
                        <option value="" disabled>Select an item from the list below</option>
                        <option value="food">Food</option>
                        <option value="clothing">Clothing</option>
                        <option value="drinks">Drinks</option>
                        <option value="bills">Bills</option>
                        <option value="transportation">Transportation</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <button class="btn btn-success form-submit" type="submit">Add</button>
            </form>
        </div>
        <div class="container col-6">
            <div id="expenses-container">
                <template id="expense">
                    <div class="card">
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li id="show-item"></li>
                                <li id="show-price"></li>
                                <li id="show-amount"></li>
                                <li id="show-date"></li>
                                <li id="show-category"></li>
                            </ul>
                        </div>
                        <button data-expense-id class="btn btn-danger delete-btn"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path
                                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path
                                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg></button>
                    </div>

                </template>
            </div>
            <button class="btn btn-primary" id="show-more">Show More</button>
        </div>
    </section>

    <script src="Javascript/dashboardScript.js" type="module"></script>
</body>

</html>